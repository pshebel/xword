{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@components/*": ["components/*"],
      "@types/*": ["types/*"],
      "@hooks/*": ["hooks/*"],
      "@store/*": ["store/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
